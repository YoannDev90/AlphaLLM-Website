<script>
  const initHero = async () => {
    const { gsap } = await import('gsap');

    gsap.from('.hero-copy > *', {
      opacity: 0,
      y: 24,
      duration: 0.9,
      ease: 'power3.out',
      stagger: 0.08,
    });

    const phone = document.querySelector('[data-parallax]');
    if (phone && window.innerWidth > 900) {
      const bounds = () => phone.getBoundingClientRect();
      const handleMove = (e) => {
        const rect = bounds();
        const relX = (e.clientX - rect.left) / rect.width - 0.5;
        const relY = (e.clientY - rect.top) / rect.height - 0.5;
        gsap.to(phone, {
          rotateY: relX * 10 - 6,
          rotateX: -relY * 6 + 4,
          x: relX * 18,
          y: relY * 14,
          duration: 0.35,
          ease: 'power2.out',
        });
      };

      const reset = () => {
        gsap.to(phone, {
          rotateY: -6,
          rotateX: 4,
          x: 0,
          y: 0,
          duration: 0.6,
          ease: 'power3.out',
        });
      };

      phone.addEventListener('mousemove', handleMove);
      phone.addEventListener('mouseleave', reset);
    }
  };

  if (typeof window !== 'undefined') {
    window.addEventListener('DOMContentLoaded', () => {
      initHero();
    });
  }
</script>
