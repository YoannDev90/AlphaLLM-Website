<style>
  .hero {
    position: relative;
    padding: 7rem 0 4rem;
    overflow: hidden;
  }

  .hero-shell {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 3rem;
    align-items: center;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .grid {
    position: absolute;
    inset: 10% 0 0 0;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 80px 80px;
    mask-image: radial-gradient(ellipse 80% 60% at 50% 30%, black, transparent);
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(120px);
    opacity: 0.8;
  }

  .pill {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.45rem 0.9rem;
    border-radius: 999px;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.14), rgba(249, 115, 22, 0.1));
    border: 1px solid rgba(139, 92, 246, 0.25);
    color: var(--color-text);
    font-weight: 600;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    font-size: 0.8rem;
  }

  .pill-logo {
    width: 24px;
    height: 24px;
    border-radius: 8px;
    object-fit: cover;
    border: 1px solid var(--glass-border);
  }

  .orb-1 {
    width: 640px;
    height: 640px;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.32) 0%, transparent 55%);
    top: -20%;
    left: -10%;
  }

  .orb-2 {
    width: 520px;
    height: 520px;
    background: radial-gradient(circle, rgba(249, 115, 22, 0.22) 0%, transparent 60%);
    bottom: -10%;
    right: -10%;
  }

  .hero-copy {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .hero h1 {
    font-size: clamp(2.6rem, 6vw, 4.4rem);
    line-height: 1.05;
    letter-spacing: -0.03em;
  }

  .gradient {
    background: linear-gradient(135deg, var(--accent-iris), var(--accent-apricot), var(--accent-pink));
