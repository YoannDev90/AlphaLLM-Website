---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "AlphaLLM - Assistant IA pour Discord",
  description = "Invitez AlphaLLM sur votre serveur Discord : mémoire longue, vision, génération d'images et commandes naturelles.",
} = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#050508" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body>
    <div class="noise"></div>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-bg: #050508;
    --color-bg-secondary: #0b0b12;
    --color-bg-tertiary: #131321;
    --color-surface: rgba(255, 255, 255, 0.03);
    --color-border: rgba(255, 255, 255, 0.07);
    --color-hover: rgba(255, 255, 255, 0.08);
    --color-text: #f6f7fb;
    --color-muted: #9ea0b3;
    --color-dim: #6c6e7d;
    --accent-iris: #8b5cf6;
    --accent-apricot: #f97316;
    --accent-pink: #ec4899;
    --accent-cyan: #06b6d4;
    --accent-green: #22c55e;
    --shadow-lg: 0 30px 80px rgba(0, 0, 0, 0.55);
    --shadow-md: 0 12px 40px rgba(0, 0, 0, 0.45);
    --glass: rgba(255, 255, 255, 0.03);
    --glass-border: rgba(255, 255, 255, 0.07);
    --glass-strong: rgba(255, 255, 255, 0.06);
    --ease: cubic-bezier(0.16, 1, 0.3, 1);
    --font-sans: 'Space Grotesk', 'SF Pro Display', system-ui, -apple-system, sans-serif;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
    scrollbar-gutter: stable;
  }

  body {
    font-family: var(--font-sans);
    background: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    overflow-x: hidden;
    -webkit-font-smoothing: antialiased;
  }

  body::before {
    content: '';
    position: fixed;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -10%, rgba(139, 92, 246, 0.15) 0%, transparent 55%),
      radial-gradient(ellipse 70% 45% at 90% 40%, rgba(249, 115, 22, 0.08) 0%, transparent 55%),
      radial-gradient(ellipse 65% 45% at 10% 75%, rgba(6, 182, 212, 0.08) 0%, transparent 60%);
    pointer-events: none;
    z-index: -2;
  }

  .noise {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 9999;
    opacity: 0.02;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
  }

  a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s var(--ease), opacity 0.3s var(--ease);
  }

  img {
    max-width: 100%;
    display: block;
  }

  button {
    font-family: inherit;
    cursor: pointer;
  }

  ::selection {
    background: var(--accent-iris);
    color: white;
  }

  ::-webkit-scrollbar {
    width: 10px;
  }

  ::-webkit-scrollbar-track {
    background: var(--color-bg);
  }

  ::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, var(--color-bg-tertiary), var(--color-bg-secondary));
    border-radius: 6px;
    border: 2px solid var(--color-bg);
  }

  .pill {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.45rem 0.9rem;
    border-radius: 999px;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.14), rgba(249, 115, 22, 0.1));
    border: 1px solid rgba(139, 92, 246, 0.25);
    color: var(--color-text);
    font-weight: 600;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    font-size: 0.8rem;
  }

  .section-shell {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .glass {
    background: var(--glass);
    border: 1px solid var(--glass-border);
    backdrop-filter: blur(18px) saturate(160%);
  }
</style>
